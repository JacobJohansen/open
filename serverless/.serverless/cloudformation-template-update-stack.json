{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "The AWS CloudFormation template for this Serverless application",
  "Resources": {
    "ServerlessDeploymentBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketEncryption": {
          "ServerSideEncryptionConfiguration": [
            {
              "ServerSideEncryptionByDefault": {
                "SSEAlgorithm": "AES256"
              }
            }
          ]
        }
      }
    },
    "TankDynamoStreamEventLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/commandeer-tanks-development-tankDynamoStreamEvent"
      }
    },
    "TankS3FileCreatedEventLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": "/aws/lambda/commandeer-tanks-development-tankS3FileCreatedEvent"
      }
    },
    "IamRoleLambdaExecution": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": [
                  "lambda.amazonaws.com"
                ]
              },
              "Action": [
                "sts:AssumeRole"
              ]
            }
          ]
        },
        "Policies": [
          {
            "PolicyName": {
              "Fn::Join": [
                "-",
                [
                  "development",
                  "commandeer-tanks",
                  "lambda"
                ]
              ]
            },
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogStream"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/commandeer-tanks-development*:*"
                    }
                  ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:PutLogEvents"
                  ],
                  "Resource": [
                    {
                      "Fn::Sub": "arn:${AWS::Partition}:logs:${AWS::Region}:${AWS::AccountId}:log-group:/aws/lambda/commandeer-tanks-development*:*:*"
                    }
                  ]
                }
              ]
            }
          }
        ],
        "Path": "/",
        "RoleName": {
          "Fn::Join": [
            "-",
            [
              "commandeer-tanks",
              "development",
              {
                "Ref": "AWS::Region"
              },
              "lambdaRole"
            ]
          ]
        }
      }
    },
    "TankDynamoStreamEventLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/commandeer-tanks/development/1574310616657-2019-11-21T04:30:16.657Z/commandeer-tanks.zip"
        },
        "FunctionName": "commandeer-tanks-development-tankDynamoStreamEvent",
        "Handler": "handlers/dynamo-streams/tankDynamoStreamHandler.process",
        "MemorySize": 256,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs10.x",
        "Timeout": 900,
        "Tags": [
          {
            "Key": "DEPARTMENT",
            "Value": "MACHINERY"
          },
          {
            "Key": "ENVIRONMENT",
            "Value": "DEV"
          }
        ]
      },
      "DependsOn": [
        "TankDynamoStreamEventLogGroup",
        "IamRoleLambdaExecution"
      ]
    },
    "TankS3FileCreatedEventLambdaFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "Code": {
          "S3Bucket": {
            "Ref": "ServerlessDeploymentBucket"
          },
          "S3Key": "serverless/commandeer-tanks/development/1574310616657-2019-11-21T04:30:16.657Z/commandeer-tanks.zip"
        },
        "FunctionName": "commandeer-tanks-development-tankS3FileCreatedEvent",
        "Handler": "handlers/s3/tankS3FileCreatedHandler.process",
        "MemorySize": 256,
        "Role": {
          "Fn::GetAtt": [
            "IamRoleLambdaExecution",
            "Arn"
          ]
        },
        "Runtime": "nodejs10.x",
        "Timeout": 900,
        "Tags": [
          {
            "Key": "DEPARTMENT",
            "Value": "MACHINERY"
          },
          {
            "Key": "ENVIRONMENT",
            "Value": "DEV"
          }
        ]
      },
      "DependsOn": [
        "TankS3FileCreatedEventLogGroup",
        "IamRoleLambdaExecution"
      ]
    }
  },
  "Outputs": {
    "ServerlessDeploymentBucketName": {
      "Value": {
        "Ref": "ServerlessDeploymentBucket"
      }
    }
  }
}